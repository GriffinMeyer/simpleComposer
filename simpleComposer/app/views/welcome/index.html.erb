<script>
	var stopped = false;

	var notes = ['E5','Eb5','E5','Eb5','E5','B4','D5','C5','A4','','','C4','E4','A4','B4','','','E4','A4','B4','C5','','','E4','E5','Eb5','E5','Eb5','E5','B4','D5','C5','A4','','','C4','E4','A4','B4','','','E4','C5','B4','A4'];

	setTimeout(function(){
 		start();
	},100);

	var piano = new Wad({
    source : 'square', 
    env : {
        attack : .01, 
        decay : .005, 
        sustain : .3, 
        hold : .025, 
        release : .3
    }, 
    filter : {
        type : 'lowpass', 
        frequency : 1200, 
        q : 8.5, 
        env : {
            attack : .2, 
            frequency : 600
        }
    },
	vibrato : {
		shape : 'sine',
		magnitude: 3,
		speed :4,
		attack :0
	}
})	
	function start(){
		
		play();
	}

	function play(){
	var pnote;
	var count = 0;
		if(!stopped){
			for(var i = 0; i < notes.length; ++i){
				pnote = notes[i];
				if(pnote==''){
					count+=.2;
				}
				else{
				piano.play({wait:count, pitch : pnote });
				count+=.2;
				}
			}
			
		}
	}
	
</script>


